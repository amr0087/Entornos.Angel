import random
class ListaNombres:

    def __init__(self):
        self.lista_nombres_pymon = {"Aquallama","Electroz√≥n","Planticua","Fluffernix","Rocablaze","Venoclaw","Solifly","Glacifin","Spectrofeist","Fungloom"}
        self.lista_nombres_enemigos = {"Aria Azimuth","Orion Wildheart","Nova Nightfall","Sable Starcaster", "Phoenix Emberflare","Lyra Luminary","Rune Shadowcaster","Blaze Driftwood","Zephyr Skyweaver","Echo Stormcaller"}
    
    def obtener_nombre_pymon (self,lista_nombres_pymon):
        pymon_aleatorio = random.choice(lista_nombres_pymon)
        return pymon_aleatorio

    def obtener_nombre_enemigo (self,lista_nombres_enemigos):
        pymon_aleatorio = random.choice(lista_nombres_enemigos)
        return pymon_aleatorio
